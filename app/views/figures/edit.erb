<form method="post" action="/figures/<%=@figure.id%>">
<input type="hidden" id="hidden" name="_method" value="patch">


<input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name">

<% Title.all.each do |title| %>
<br><br>
  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%= 'checked' if @figure.titles.include?(title)%>><%=title.name%></input>
<% end %>

<% Landmark.all.each do |landmark| %>
<br><br>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <% 'checked' if @figure.landmarks.include?(landmark.id)%>><%=landmark.name%></input>
<% end %>


<p>New Title Name: <input type="text" name="title[name]" id="new_title"></p>
<p>New Landmark Name: <input type="text" name="landmark[name]" id="new_landmark"></p>


<input type="submit" value="Edit Figure">
</form>